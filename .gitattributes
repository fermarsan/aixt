*.txt linguist-documentation=true

# Mark C files except generated ones as vendored
# *.c linguist-vendored=true
*.h linguist-vendored=true
*.hpp linguist-vendored=true
*.cpp linguist-vendored=true

# others
*.i linguist-vendored=true
*.mk linguist-vendored=true
*.inc linguist-vendored=true
*.bat linguist-vendored=true
*.P linguist-vendored=true
*.sdc linguist-vendored=true
*.ctl linguist-vendored=true
*.html linguist-vendored=true
*.syntax linguist-vendored=true
*.sim1 linguist-vendored=true

*.ipynb linguist-vendored=true

# Ignore Makefiles in language statistics
*Makefile linguist-vendored=true
*makefile linguist-vendored=true

# Mark binary files as binary
*.d binary
*.o binary
*.hex binary
*.elf binary
*.bin binary

# Mark build directories as linguist-vendored=true
/build/ linguist-vendored=true
/bin/ linguist-vendored=true
/out/ linguist-vendored=true

# Mark dependency directories as linguist-vendored=true
.vmodules/ linguist-vendored=true

# Ignore image files in language statistics
*.png linguist-vendored=true
*.jpg linguist-vendored=true
*.jpeg linguist-vendored=true
*.gif linguist-vendored=true
*.bmp linguist-vendored=true
*.svg linguist-vendored=true
*.ico linguist-vendored=true

# Ignore assembly files in language statistics
*.s linguist-vendored=true
*.asm linguist-vendored=true
*.S linguist-vendored=true
*.a51 linguist-vendored=true
*.inc linguist-vendored=true

# Ignore Linux executables without extension
# Assuming executables are in specific directories like "bin" or "build"
bin/* linguist-vendored=true
build/* linguist-vendored=true

# Ignore JSON and TOML files in language statistics
*.json linguist-vendored=true
*.toml linguist-vendored=true


# Ignore c libraries
**/clib/** linguist-vendored=true
