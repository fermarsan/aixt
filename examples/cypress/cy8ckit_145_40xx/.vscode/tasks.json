{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Aixt: Transpile",
            "type": "shell",
            "windows": {
                "command": [
                    "if (Test-Path -Path 'pixi.toml')",
                    "{ pixi run aixt transpile ${file} }",
                    "else",
                    "{ ${config:aixt_path} transpile ${file} }"
                ]
            },
            "linux": {
                "command": [
                    "if [ -f pixi.toml ]; then",
                    "pixi run aixt transpile ${file};",
                    "else",
                    "${config:aixt_path} transpile ${file};",
                    "fi"
                ]
            },
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
            "presentation": {
                "showReuseMessage": false
            }
        },
        {
            "label": "Aixt: C Compile",
            "type": "shell",
            "windows": {
                "command": [
                    "if (Test-Path -Path 'pixi.toml')",
                    "{ pixi run aixt c_compile ${file} }",
