        {
            "label": "Aixt: Clean",
            "type": "shell",
            "windows": {
                "command": [
                    "if (Test-Path -Path 'pixi.toml')",
                    "{ pixi run aixt clean ${file} }",
                    "else",
                    "{ ${config:aixt_path} clean ${file} }"
                ]
            },
            "linux": {
                "command": [
                    "if [ -f pixi.toml ]; then",
                    "pixi run aixt clean ${file};",
                    "else",
                    "${config:aixt_path} clean ${file};",
                    "fi"
                ]
            },
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
            "presentation": {
                "showReuseMessage": false
            }
        },
        {
            "label": "Aixt: Run",
            "type": "shell",
            "windows": {
                "command": [
                    "${fileDirname}\\${fileBasenameNoExtension}.exe"
                ],
            },
            "linux": {
                "command": [
                    "${fileDirname}/${fileBasenameNoExtension}"
                ],
            },
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
            "presentation": {
                "showReuseMessage": false
            }
        },
        {
            "label": "Aixt: Build & Run",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Aixt: Build",
                "Aixt: Run"
            ]
        },
        {
            "label": "Aixt: New Project",
            "type": "shell",
            "windows": {
                "command": [
                    "${config:aixt_path}",
                    "new_project",
                    "${input:dirName}",
                    "${input:projectName}",
                    "${input:device}"
                ],
            },
            "linux": {
                "command": [
                    "${config:aixt_path}",
                    "new_project",
                    "${input:dirName}",
                    "${input:projectName}",
                    "${input:device}"
                ],
            },
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
            "presentation": {
                "showReuseMessage": false
            }
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "projectName",
            "description": "Project name.",
            "default": "project"
        },
        {
            "type": "promptString",
            "id": "dirName",
            "description": "Directory name.",
            "default": "."
        },
        {
            "type": "promptString",
            "id": "device",
            "description": "Device or Board name.",
            "default": "Emulator"
        }
    ]
}