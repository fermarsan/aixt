{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Aixt: Transpile",
            "type": "shell",
            "windows": {
                "command": [
                    "if (Test-Path -Path 'pixi.toml')",
                    "{ pixi run aixt transpile ${config:device} ${file} }",
                    "else",
                    "{ ${config:aixt_windows} transpile ${config:device} ${file} }"
                ]
            },
            "linux": {
                "command": [
                    "if [ -f pixi.toml ]; then",
                    "pixi run aixt transpile ${config:device} ${file};",
                    "else",
                    "${config:aixt_linux} transpile ${config:device} ${file};",
                    "fi"
                ]
            },
            "problemMatcher": ["$tsc"],
            "group": "build",
            "presentation": {
            "showReuseMessage": false
            }
        },
        {
            "label": "Aixt: C Compile",
            "type": "shell",
            "windows": {
                "command": [
                    "if (Test-Path -Path 'pixi.toml')",
