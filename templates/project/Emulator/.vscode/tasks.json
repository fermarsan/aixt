                    "{ ${config:aixt_windows} c_compile ${config:device} ${file} }"
                ]
            },
            "linux": {
                "command": [
                    "if [ -f pixi.toml ]; then",
                    "pixi run aixt c_compile ${config:device} ${file};",
                    "else",
                    "${config:aixt_linux} c_compile ${config:device} ${file};",
                    "fi"
                ]
            },
            "problemMatcher": ["$tsc"],
            "group": "build",
            "presentation": {
            "showReuseMessage": false
            }
        },
        {
            "label": "Aixt: Build",
            "type": "shell",
            "windows": {
                "command": [
                    "if (Test-Path -Path 'pixi.toml')",
                    "{ pixi run aixt build ${config:device} ${file} }",
                    "else",
                    "{ ${config:aixt_windows} build ${config:device} ${file} }"
                ]
            },
            "linux": {
                "command": [
                    "if [ -f pixi.toml ]; then",
                    "pixi run aixt build ${config:device} ${file};",
                    "else",
                    "${config:aixt_linux} build ${config:device} ${file};",
                    "fi"
                ]
            },
            "problemMatcher": ["$tsc"],
            "group": "build",
            "presentation": {
            "showReuseMessage": false
            }
        },
        {
            "label": "Aixt: Clean",
            "type": "shell",
            "windows": {
                "command": [
                    "if (Test-Path -Path 'pixi.toml')",
                    "{ pixi run aixt clean ${config:device} ${file} }",
                    "else",
                    "{ ${config:aixt_windows} clean ${config:device} ${file} }"
                ]
            },
            "linux": {
                "command": [
                    "if [ -f pixi.toml ]; then",
                    "pixi run aixt clean ${config:device} ${file};",
                    "else",
                    "${config:aixt_linux} clean ${config:device} ${file};",
                    "fi"
                ]
            },
            "problemMatcher": ["$tsc"],
            "group": "build",
            "presentation": {
            "showReuseMessage": false
            }
        },
        {
            "label": "Aixt: Run",
            "type": "shell",
            "windows": {
                "command": [ "${fileDirname}\\${fileBasenameNoExtension}.exe" ],
            },
            "linux": {
                "command": [ "${fileDirname}/${fileBasenameNoExtension}" ],
            },
            "problemMatcher": ["$tsc"],
            "group": "build",
            "presentation": {
            "showReuseMessage": false
            }  
        },,
        {
            "label": "Aixt: Compile & Run",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": ["Aixt: Compile", "Aixt: Run"]
        }
        {
            "label": "Aixt: Build & Run",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": ["Aixt: Build", "Aixt: Run"]
        }
    ]
}